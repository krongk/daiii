<% @left_items, @right_items = @site_items.partition{|r| r.id > @site_items[@site_items.size/2].id } %>
<div class="row-fluid">
  <div class="span6">
    <table class="table table-striped table-hover">
      <tbody>
      <% @right_items.each do |site_item| %>
        <%= render :partial => "site_items/show", :locals => {:site_item => site_item} %>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="span6">
    <table class="table table-striped table-hover">
      <tbody>
      <% @left_items.each do |site_item| %>
        <%= render :partial => "site_items/show", :locals => {:site_item => site_item} %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
